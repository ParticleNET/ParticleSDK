<UserControl
	x:Class="Win8.AuthenticationPopup"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:controls="using:Common.Controls"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d" Background="#7F000000">
	<Popup x:Name="Container" Width="400" MinHeight="400" IsOpen="False" HorizontalAlignment="Center" VerticalAlignment="Center">
		<StackPanel Width="400" Height="400">
			<controls:AuthenticationControl x:Name="AuthControl" />
			<Button x:Name="LoginAction" HorizontalAlignment="Right" Tapped="LoginAction_Tapped">Login</Button>
		</StackPanel>
	</Popup>
</UserControl>
	
