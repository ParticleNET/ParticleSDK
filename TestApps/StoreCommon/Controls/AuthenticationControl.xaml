<UserControl
    x:Class="Common.Controls.AuthenticationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel>
        <TextBlock Text="Username" Margin="5" />
        <TextBox Text="{Binding Username, Mode=TwoWay}" Margin="5" InputScope="EmailSmtpAddress" />
        <TextBlock Text="Password" Margin="5" />
        <PasswordBox Password="{Binding Password, Mode=TwoWay}" Margin="5" />
        <StackPanel x:Name="LoggingInContainer" Orientation="Horizontal" Visibility="Collapsed">
            <TextBlock Text="Logging In" Margin="5" />
            <ProgressRing IsActive="True" Margin="5" />
        </StackPanel>
        <StackPanel x:Name="ErrorContainer" Visibility="Collapsed">
            <TextBlock x:Name="ErrorOutput" Text="" Margin="5" />
            <TextBlock x:Name="ErrorDescriptionOutput" Margin="5" />
        </StackPanel>
    </StackPanel>
</UserControl>
